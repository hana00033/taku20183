<% @p_period = params[:period].to_i+1 %>
<% @p_week = params[:week].to_i%>
<% @new_week %>
<% if @p_week ==0 then%>
  <% @new_week = "月曜日" %>
<% elsif @p_week ==1 then%>
  <% @new_week = "火曜日" %>
<% elsif @p_week ==2 then%>
  <% @new_week = "水曜日" %>
<% elsif @p_week ==3 then%>
  <% @new_week = "木曜日" %>
<% elsif @p_week ==4 then%>
  <% @new_week = "金曜日" %>
<% elsif @p_week == 5 then%>
  <% @new_week = "土曜日" %>
<% end %>

<% @ps_period = @p_period.to_s %>

<% @head = @new_week + @ps_period%>

<h1><%= @head %>限</h1>
<%= link_to image_tag("icon5.png",:class => "yazirushi"), lessons_path %>
<div style="width: 300px;">
  <%= form_for(@lesson) do |f| %>
  	<div class="new-content">
      <%= f.label :name, "授業名" %><br>
      <%= f.text_field :name, :class => "new-text"%>
    </div>
    <div class="new-content">
      <%= f.label :description, "詳細" %><br>
      <%= f.text_area :description ,size:30,:class => "new-text"%>
    </div>
    <div class="new-content">
      <%= f.label :teacher_name, "教授名" %><br>
      <%= f.text_area :teacher_name ,:class => "new-text"%>
    </div>
    <div class="new-content">
      <%= f.label :credit, "単位数" %><br>
      <%= f.text_area :credit ,:class => "new-text"%>
    </div>
    <div class="new-content">
      <%= f.label :grade, "学年" %><br>
      <%= f.text_area :grade ,:class => "new-text"%>
    </div>
    <div class="new-content">
      <%= f.label :term, "学期" %><br>
      <%= f.select :term, [["前期", "0"], ["後期", "1"]] %>
    </div>
    <div class="new-content">
      <%= f.label :week, "曜日" %><br>
          <% if params[:week]%>
            <p><%= @new_week %></p>
            <% @p_week.to_s %>
            <%= f.hidden_field :week,  :value =>params[:week] %>
          <% else %>
            <%= f.select :week, [["月", "0"], ["火", "1"],["水", "2"],["木", "3"],["金", "4"],["土", "5"]],  :prompt => "選択してください" %>
          <% end %>
    </div>
    <div class="new-content">
        <%= f.label :period, "何限" %><br>
          <% if params[:period]%>
            <p><%= @p_period%>限</p>
            <%= f.hidden_field :period,  :value =>params[:period] %>
          <% else %>
            <%= f.select :period, [["1限", "0"], ["2限", "1"],["3限","2"],["4限","3"],["5限","4"]]%>
          <% end %>
    </div>
    <div class="new-content">
      <%= f.label :absence_count, "欠席・遅刻回数" %><br>
      <%= f.text_area :absence_count ,:class => "new-text"%>
    </div>
    <div class="submit">
    <% button_tag type: :submit do %>
      <% image_tag "icon8.png" %>
    <% end %>

    <%= image_submit_tag "icon8.png" %>
    <h2>保存</h2>
    </div>
    <p class="space"></p>
  <% end %>
    
</div>
