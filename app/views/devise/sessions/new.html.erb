

<h3>ログイン</h3>

<p class="space"></p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,"メールアドレス" %></br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class => "new-passward"%>
  </div>


  <div class="field">
    <%= f.label :password ,"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "off" ,:class => "new-passward"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me%>
      <%= f.label :保存する %>
    </div>
  <% end -%>

<div class="actions">
<%= f.submit "ログイン" ,:class => "submit_user"%>
</div>

<% end %>

<%= render "devise/shared/links" %>





  



